<html>

    <head>
        <meta charset='utf-8' />
        <meta name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no' />
        <title>Productos</title>

    </head>

    <body>
        <div style='background-color:lightgray; margin:10px; padding:10px;'>
            <form onsubmit='enviarProducto()'>
                <h1 style='color:green; font-weight:bold;'>Ingrese producto:</h1>
                <label for='title'>Nombre de producto:</label>
                <input type='text' id='title' name='title' /><br />
                <label for='price'>Precio:</label>
                <input type='text' id='price' name='price' /><br />
                <label for='category'>Categoría:</label>
                <input type='text' id='category' name='category' /><br />
                <label for='description'>Descripción:</label>
                <input type='text' id='description' name='description' /><br />
                <label for='pictureUrl'>Imagen (URL):</label>
                <input type='text' id='pictureUrl' name='pictureUrl' /><br />
                <input type='submit' />
            </form>

            <h1 style='color:green;'>Lista de Productos:</h1>
            <table style='margin:20px; background-color:rgb(22, 22, 22); color:white;' height='400px'>
                <tr>
                    <th rowspan='1' colspan='10'>Producto</th>
                    <th rowspan='1' colspan='20'>Precio</th>
                    <th rowspan='1' colspan='10'>Descripción</th>
                    <th rowspan='1' colspan='10'>Imagen</th>
                </tr>
                <tbody id='productos'>

                </tbody>
            </table>
        </div>

        <div
            style='border-color:lightgrey; border-width:5px; width:70%; background-color:lightgray; padding:10px; display: flex-direction:column
        ; justify-content: space-beetwen'
        >
            <h2 style='color:green; font-weight:bold; margin-left: 40px;'>Centro de Mensajes</h2>

            <form onsubmit='return enviarMensaje(this)' style='margin:15px; padding:10px;'>
                <div class='chat-message clearfix'>
                    <div class='input-group mb-0'>
                        <div class='input-group-append'>
                            <input id='nombre' type='text' class='form-control' placeholder='Email' />
                            <input id='chat_mensaje' type='text' class='form-control' placeholder='Mensaje' />
                            <input id='enviar_mensaje' type='submit' class='form-control' placeholder='Submit' />
                            <ul id='chatCompleto'>
                            </ul>

                        </div>
                    </div>
                </div>
            </form>
        </div>

        <script src='/socket.io/socket.io.js'></script>
        <script src='../index.js'></script>
    </body>

</html>