{{> navbar}}
<form
    action="/productos"
    method="POST"
    class="d-flex justify-content-center align-items-center flex-column"
    style="height: 100vh"
>
    <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Nombre del producto</label>
        <input
            type="text"
            class="form-control"
            id="exampleInputEmail1"
            aria-describedby="emailHelp"
            name="title"
        />
    </div>
    <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Precio</label>
        <input
            type="number"
            class="form-control"
            id="exampleInputEmail1"
            aria-describedby="emailHelp"
            name="price"
        />
    </div>
    <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">URL imagen</label>
        <input
            type="text"
            class="form-control"
            id="exampleInputEmail1"
            aria-describedby="emailHelp"
            name="thumbnail"
        />
    </div>
    <button type="submit" class="btn btn-primary">
        Agregar producto
    </button>
    <a href="/productos" class="btn btn-secondary mt-2">Ver productos</a>
    
</form>
<h1 class="d-flex align-items-center justify-content-center">Lista de Productos</h1>
<div
    class="productList container d-flex flex-direction-column flex-wrap justify-content-center"
>
    {{#if productos}}
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Precio</th>
                    <th scope="col">Im√°gen</th>
                </tr>
            </thead>
            <tbody >

                {{#each productos}}
                    <tr>
                        <th scope="row">{{this.id}}</th>
                        <td>{{this.title}}</td>
                        <td>{{this.price}}$</td>
                        <td><img
                                src="{{this.thumbnail}}"
                                style="width: 100px;"
                                alt="{{this.title}}"
                            /></td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    {{else}}
        <h1>No hay productos</h1>
    {{/if}}
</div>
<a class="d-flex justify-content-center mt-4 btn btn-dark" href="/">Agregar producto</a>
Footer